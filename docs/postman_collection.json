{
    "info": {
        "_postman_id": "color-battle-api-v1",
        "name": "ColorBattle API",
        "description": "Collection for testing ColorBattle backend endpoints locally.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/health",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "health"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "List Recent Battles (Paginated)",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/battles?page=1&limit=10",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "battles"
                    ],
                    "query": [
                        {
                            "key": "page",
                            "value": "1"
                        },
                        {
                            "key": "limit",
                            "value": "10"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "List Trending Battles",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/battles/trending",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "battles",
                        "trending"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Create Battle",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "var jsonData = pm.response.json();",
                            "pm.environment.set(\"currentBattleId\", jsonData.battleId);"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"name\": \"Cats vs Dogs\",\n    \"options\": [\n        { \"name\": \"Cats\" },\n        { \"name\": \"Dogs\" }\n    ]\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/battles",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "battles"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Get Battle Details",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/battle/{{currentBattleId}}?deviceId=test-device-123",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "battle",
                        "{{currentBattleId}}"
                    ],
                    "query": [
                        {
                            "key": "deviceId",
                            "value": "test-device-123",
                            "description": "Simulated Device ID for user tracking"
                        }
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Vote (Option 1)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"optionId\": \"opt1\",\n    \"deviceId\": \"test-device-123\"\n}"
                },
                "url": {
                    "raw": "{{baseUrl}}/api/battle/{{currentBattleId}}/vote",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "battle",
                        "{{currentBattleId}}",
                        "vote"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Delete Battle",
            "request": {
                "method": "DELETE",
                "header": [],
                "url": {
                    "raw": "{{baseUrl}}/api/battle/{{currentBattleId}}",
                    "host": [
                        "{{baseUrl}}"
                    ],
                    "path": [
                        "api",
                        "battle",
                        "{{currentBattleId}}"
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "currentBattleId",
            "value": "red-vs-blue",
            "type": "string"
        }
    ]
}